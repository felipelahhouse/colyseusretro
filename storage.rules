rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Avatars de usuários
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ROMs - Leitura pública, escrita apenas autenticados
    match /roms/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Covers - Leitura pública, escrita apenas autenticados
    match /covers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // ROMs e imagens de jogos
    match /games/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Imagens de streams
    match /streams/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
