/**
 * üéÆ Multiplayer Player View - PeerJS WebRTC
 * Componente para assistir e controlar a sess√£o multiplayer do HOST
 */

import React, { useEffect, useRef, useState } from 'react';
import { useAuth } from '../../contexts/AuthContext';
import { usePeerJSPlayer } from '../../hooks/usePeerJSPlayer';
import { doc, onSnapshot } from 'firebase/firestore';
import { db } from '../../lib/firebase';
import { Loader2, Wifi, X, Gamepad2 } from 'lucide-react';

interface MultiplayerPlayerProps {
  sessionId: string;
  onClose?: () => void;
}

export const MultiplayerPlayer: React.FC<MultiplayerPlayerProps> = ({
  sessionId,
  onClose
}) => {
  console.log('üéÆ [PLAYER] Componente iniciado:', sessionId);
  
  const { user } = useAuth();
  const videoRef = useRef<HTMLVideoElement>(null);
  const [hostPeerId, setHostPeerId] = useState<string | null>(null);
  const [gameTitle, setGameTitle] = useState<string>('');

  // üì° Buscar informa√ß√µes da sess√£o no Firestore
  useEffect(() => {
    console.log('[PLAYER] üì° Buscando informa√ß√µes da sess√£o:', sessionId);
    
    const sessionRef = doc(db, 'multiplayer_sessions', sessionId);
    const unsubscribe = onSnapshot(sessionRef, (snapshot) => {
      if (snapshot.exists()) {
        const data = snapshot.data();
        console.log('[PLAYER] üì¶ Dados da sess√£o:', data);
        
        setHostPeerId(data.hostPeerId || null);
        setGameTitle(data.gameTitle || 'Jogo');
        
        if (data.hostPeerId) {
          console.log('[PLAYER] ‚úÖ HOST PeerJS ID encontrado:', data.hostPeerId);
        } else {
          console.log('[PLAYER] ‚è≥ Aguardando HOST configurar PeerJS...');
        }
      } else {
        console.error('[PLAYER] ‚ùå Sess√£o n√£o encontrada!');
      }
    }, (error) => {
      console.error('[PLAYER] ‚ùå Erro ao buscar sess√£o:', error);
    });

    return () => unsubscribe();
  }, [sessionId]);

  // üéÆ PeerJS Hook - PLAYER streaming
  const { 
    peerId,
    isConnected, 
    stream,
    connectionError,
    sendInput
  } = usePeerJSPlayer({
    sessionId,
    hostPeerId: hostPeerId || '',
    userId: user?.id || 'anonymous',
    onStreamReceived: (remoteStream) => {
      console.log('üìπ [PLAYER] Stream recebido, anexando ao video element');
      if (videoRef.current) {
        videoRef.current.srcObject = remoteStream;
        videoRef.current.play().catch(error => {
          console.error('[PLAYER] ‚ùå Erro ao reproduzir video:', error);
        });
      }
    },
    onDisconnected: () => {
      console.log('‚ùå [PLAYER] Desconectado do HOST');
    }
  });

  // üéÆ Capturar inputs do teclado e enviar para HOST
  useEffect(() => {
    const handleKeyDown = (e: KeyboardEvent) => {
      // Previne scroll da p√°gina com setas
      if (['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'Space'].includes(e.code)) {
        e.preventDefault();
      }

      sendInput({
        type: 'keydown',
        code: e.code,
        key: e.key,
        timestamp: Date.now()
      });

      console.log('üéÆ [PLAYER] Tecla pressionada:', e.code);
    };

    const handleKeyUp = (e: KeyboardEvent) => {
      if (['ArrowUp', 'ArrowDown', 'ArrowLeft', 'ArrowRight', 'Space'].includes(e.code)) {
        e.preventDefault();
      }

      sendInput({
        type: 'keyup',
        code: e.code,
        key: e.key,
        timestamp: Date.now()
      });

      console.log('üéÆ [PLAYER] Tecla solta:', e.code);
    };

    if (isConnected && stream) {
      console.log('üéÆ [PLAYER] Ativando captura de inputs...');
      window.addEventListener('keydown', handleKeyDown);
      window.addEventListener('keyup', handleKeyUp);

      return () => {
        console.log('üéÆ [PLAYER] Desativando captura de inputs...');
        window.removeEventListener('keydown', handleKeyDown);
        window.removeEventListener('keyup', handleKeyUp);
      };
    }
  }, [isConnected, stream, sendInput]);

  // üìπ Atualizar video element quando stream mudar
  useEffect(() => {
    if (stream && videoRef.current) {
      console.log('[PLAYER] üìπ Atualizando video com novo stream');
      videoRef.current.srcObject = stream;
      videoRef.current.play().catch(error => {
        console.error('[PLAYER] ‚ùå Erro ao reproduzir:', error);
      });
    }
  }, [stream]);

  return (
    <div className="fixed inset-0 bg-gray-900 flex flex-col z-50">
      {/* Header */}
      <div className="bg-gray-800 border-b border-gray-700 p-4 flex items-center justify-between">
        <div className="flex items-center gap-3">
          <Gamepad2 className="w-6 h-6 text-purple-400" />
          <div>
            <h1 className="text-white font-semibold">{gameTitle}</h1>
            <p className="text-sm text-gray-400">Sess√£o Multiplayer - Espectador</p>
          </div>
        </div>

        <button
          onClick={onClose}
          className="p-2 hover:bg-gray-700 rounded-lg transition-colors"
          title="Fechar"
        >
          <X className="w-5 h-5 text-gray-400" />
        </button>
      </div>

      {/* Main Content */}
      <div className="flex-1 flex items-center justify-center bg-black relative">
        {/* Loading State */}
        {!hostPeerId && (
          <div className="absolute inset-0 flex items-center justify-center bg-black/80 z-10">
            <div className="text-center">
              <Loader2 className="w-12 h-12 text-purple-500 animate-spin mx-auto mb-4" />
              <p className="text-white">Aguardando HOST iniciar...</p>
              <p className="text-gray-400 text-sm mt-2">Conectando ao servidor PeerJS...</p>
            </div>
          </div>
        )}

        {/* Connecting State */}
        {hostPeerId && !isConnected && !connectionError && (
          <div className="absolute inset-0 flex items-center justify-center bg-black/80 z-10">
            <div className="text-center">
              <Loader2 className="w-12 h-12 text-purple-500 animate-spin mx-auto mb-4" />
              <p className="text-white">Conectando ao HOST...</p>
              <p className="text-gray-400 text-sm mt-2 font-mono">{hostPeerId}</p>
            </div>
          </div>
        )}

        {/* Connection Error */}
        {connectionError && (
          <div className="absolute inset-0 flex items-center justify-center bg-black/80 z-10">
            <div className="text-center max-w-md">
              <div className="text-red-500 text-6xl mb-4">‚ùå</div>
              <p className="text-white text-lg mb-2">Erro de conex√£o</p>
              <p className="text-gray-400 text-sm">{connectionError}</p>
              <button
                onClick={onClose}
                className="mt-4 px-6 py-2 bg-red-600 hover:bg-red-700 rounded-lg transition-colors"
              >
                Fechar
              </button>
            </div>
          </div>
        )}

        {/* Waiting for Stream */}
        {isConnected && !stream && (
          <div className="absolute inset-0 flex items-center justify-center bg-black/80 z-10">
            <div className="text-center">
              <Loader2 className="w-12 h-12 text-green-500 animate-spin mx-auto mb-4" />
              <p className="text-white">‚úÖ Conectado ao HOST</p>
              <p className="text-gray-400 text-sm mt-2">Aguardando stream de v√≠deo...</p>
            </div>
          </div>
        )}

        {/* Video Stream */}
        <video
          ref={videoRef}
          autoPlay
          playsInline
          className="max-w-full max-h-full object-contain"
          style={{
            imageRendering: 'pixelated',
          }}
        />

        {/* Status Indicator */}
        {isConnected && stream && (
          <div className="absolute top-4 right-4 bg-black/70 backdrop-blur-sm rounded-lg px-4 py-2 flex items-center gap-2">
            <Wifi className="w-4 h-4 text-green-400 animate-pulse" />
            <span className="text-green-400 text-sm font-medium">üü¢ Ao vivo</span>
          </div>
        )}

        {/* Controls Hint */}
        {isConnected && stream && (
          <div className="absolute bottom-4 left-1/2 transform -translate-x-1/2 bg-black/70 backdrop-blur-sm rounded-lg px-6 py-3">
            <p className="text-white text-sm text-center">
              <Gamepad2 className="w-4 h-4 inline mr-2" />
              Use as <strong>setas do teclado</strong> para controlar
            </p>
            <p className="text-gray-400 text-xs text-center mt-1">
              ‚å®Ô∏è Seus inputs s√£o enviados para o HOST
            </p>
          </div>
        )}
      </div>

      {/* Debug Info (remov√≠vel em produ√ß√£o) */}
      {process.env.NODE_ENV === 'development' && (
        <div className="bg-gray-800 border-t border-gray-700 p-2 text-xs text-gray-400 font-mono">
          <div className="flex gap-4">
            <span>PeerID: {peerId || 'N/A'}</span>
            <span>Host: {hostPeerId || 'N/A'}</span>
            <span>Connected: {isConnected ? '‚úÖ' : '‚ùå'}</span>
            <span>Stream: {stream ? '‚úÖ' : '‚ùå'}</span>
            <span>Video: {stream ? `${stream.getTracks().length} tracks` : 'N/A'}</span>
          </div>
        </div>
      )}
    </div>
  );
};

export default MultiplayerPlayer;
